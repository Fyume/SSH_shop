<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="UTF-8"></constant>
	<package name="demo1" extends="struts-default,json-default" namespace="/">
		<!-- 用户模块 -->
		<action name="userAction_*" class="userAction" method="{1}">
			<result name="login_ok">/pages/index.jsp</result>
			<result name="gotoLoading">/pages/user/loading.jsp</result>
			<result name="login_false">/pages/user/login.jsp</result>
			<result name="goto_activate">/pages/user/activate.jsp</result>
		</action>
		<!-- 工具模块 -->
		<action name="utilsAction_*" class="utilsAction" method="{1}">
		</action>
	</package>
</struts>

