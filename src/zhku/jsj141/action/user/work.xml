<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        ">
<bean id="workAction" class="zhku.jsj141.action.user.WorkAction" scope="prototype">
	<property name="workService" ref="workService"></property>
	<property name="managerService" ref="managerService"></property>
	<property name="workUtils" ref="wutils"></property>
</bean>
<bean id="workService" class="zhku.jsj141.service.Impl.WorkServiceImpl">
	<property name="workDao" ref="workDao"></property>
</bean>
<bean id="workDao" class="zhku.jsj141.dao.Impl.WorkDaoImpl">
	<property name="hibernateTemplate" ref="hibernateTemplate"></property>
</bean>
</beans>